<h1>Sketchy</h1>

<table class='table table-striped table-hover'>
	<thead>
		<th>Title</th>
    <th>Date Created</th>
    <th>Date Modified</th>
  </thead>

  <tbody>
    <% @sketches.each do |sketch| %>
    <tr>
      <td>
        <%= link_to sketch.title, :action => 'show', :id => sketch.id %>
      </td>
      <td><%= sketch.created_at %></td>
      <td><%= sketch.updated_at %></td>
      <td>
        <%= link_to 'Delete', 
          { :action => 'destroy', :id => sketch.id },
          :confirm => "Are you sure?", :method => :delete %>
        </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_sketch_path(), :class => 'btn btn-primary' %>